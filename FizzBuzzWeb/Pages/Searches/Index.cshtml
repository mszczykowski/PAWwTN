@page
@model FizzBuzzWeb.Pages.Searches.IndexModel

@{
    ViewData["Title"] = "Baza Danych";
}

<h1>Baza Danych</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Search[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Search[0].Result)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Search[0].SearchDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Search.Take(20)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @item.ResultToString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SearchDate)
            </td>
            <td>
                @if (Model.UserID == item.OwnerID)
                {
                    <a asp-page="./Delete" asp-route-id="@item.Id">Usuń |</a>
                }
                <a asp-page="./Details" asp-route-id="@item.Id">Szczegóły</a>

            </td>
        </tr>
}
    </tbody>
</table>
